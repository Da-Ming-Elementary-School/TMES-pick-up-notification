{
  "name": "tmes-pickup",
  "description": "「大明國小課托呼叫系統」的可執行版客戶端，無須網頁伺服器即可獨立運作。",
  "author": {
    "name": "Da Ming Elementary School",
    "url": "https://tmes.tc.edu.tw/"
  },
  "contributors": [
    {
      "name": "Michael Xu"
    },
    {
      "name": "Allen Wei"
    }
  ],
  "version": "1.0.5",
  "repository": "github:Da-Ming-Elementary-School/TMES-pick-up-notification",
  "main": "electron.js",
  "bin": "./electron.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "release": "electron-builder"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.daming.notify",
    "productName": "大明國小課托呼叫系統 客戶端",
    "files": [
      "**/*",
      "./node_modules/*"
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis",
      "publish": [
        "github"
      ],
      "icon": "./image/favicon.ico"
    }
  },
  "dependencies": {
    "dialogs": "^2.0.1",
    "electron-log": "^5.3.3",
    "electron-updater": "^6.6.2",
    "jquery": "^3.7.1"
  }
}
