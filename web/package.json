{
  "name": "tmes-pickup",
  "description": "「大明國小課托呼叫系統」的可執行版客戶端，無須網頁伺服器即可獨立運作。",
  "author": {
    "name": "Da Ming Elementary School",
    "url": "https://tmes.tc.edu.tw/"
  },
  "contributors": [
    {"name": "Michael Xu"},
    {"name": "Allen Wei"}
  ],
  "version": "1.0.1-beta",
  "main": "electron.js",
  "bin": "./electron.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.daming.notify",
    "productName": "大明國小課托呼叫系統 客戶端",
    "files": [
      "**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "msi",
      "icon": "./image/favicon.ico"
    }
  },
  "dependencies": {
    "dialogs": "^2.0.1",
    "jquery": "^3.7.1"
  }
}
