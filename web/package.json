{
  "name": "tmes-pickup",
  "version": "1.0.0",
  "main": "electron.js",
  "bin": "./electron.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.daming.notify",
    "productName": "大明學生呼叫通知",
    "files": [
      "**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    }
  },
  "dependencies": {
    "dialogs": "^2.0.1",
    "jquery": "^3.7.1"
  }
}
